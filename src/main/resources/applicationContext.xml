<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:component-scan base-package="com.aluen.test.*">
    </context:component-scan>

    <context:annotation-config/>

    <bean id="kafkaConfig" class="com.aluen.test.KafkaConfig"></bean>
    <bean id="producer" class="com.aluen.test.BaseProducer" scope="prototype">
        <constructor-arg index="0" value="POLLING"/>
        <constructor-arg index="1" ref="kafkaConfig"/>
    </bean>
    <bean id="topicPollingService" class="com.aluen.test.TopicPollingService" scope="prototype"></bean>
</beans>